<?xml version="1.0" encoding="UTF-8"?>
<!--
    EasyTV Posters View (Main)
    Resolution: 1080i (1920x1080)
    
    Layout: Left info panel + Right poster grid
    
    Control IDs:
        655 - Main poster panel container
-->
<window>
    <defaultcontrol>655</defaultcontrol>
    <visible>!System.ScreenSaverActive</visible>
    
    <controls>
        <!-- Full screen background -->
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF000000">OneBlackPixel.png</texture>
        </control>
        
        <!-- Main content group -->
        <control type="group">
            <visible>Control.IsVisible(655)</visible>
            <animation effect="fade" start="0" end="100" time="400">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
            
            <!-- ==================== LEFT SIDE: INFO PANEL ==================== -->
            <control type="group">
                <left>40</left>
                <top>60</top>
                <width>660</width>
                <height>960</height>
                
                <!-- Fanart preview -->
                <control type="multiimage">
                    <left>0</left>
                    <top>0</top>
                    <width>620</width>
                    <height>349</height>
                    <fadetime>400</fadetime>
                    <imagepath background="true">$INFO[Container(655).ListItem.Property(Fanart_Image)]</imagepath>
                    <aspectratio aligny="top">scale</aspectratio>
                </control>
                
                <!-- Separator line -->
                <control type="image">
                    <left>0</left>
                    <top>365</top>
                    <width>620</width>
                    <height>1</height>
                    <texture>thinline.png</texture>
                </control>
                
                <!-- Show Title -->
                <control type="label">
                    <left>0</left>
                    <top>385</top>
                    <width>620</width>
                    <height>45</height>
                    <font>font13</font>
                    <textcolor>FF50e0c7</textcolor>
                    <label>$INFO[Container(655).ListItem.Label]</label>
                </control>
                
                <!-- Episode Title -->
                <control type="label">
                    <left>0</left>
                    <top>435</top>
                    <width>620</width>
                    <height>30</height>
                    <font>font12</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <label>$INFO[Container(655).ListItem.Label2]</label>
                </control>
                
                <!-- Separator line -->
                <control type="image">
                    <left>0</left>
                    <top>480</top>
                    <width>620</width>
                    <height>1</height>
                    <texture>thinline.png</texture>
                </control>
                
                <!-- Season / Episode / Progress info -->
                <control type="label">
                    <left>0</left>
                    <top>500</top>
                    <width>620</width>
                    <height>30</height>
                    <font>font10</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <label>$ADDON[script.easytv 32220]  [COLOR FF50e0c7]$INFO[Container(655).ListItem.Season][/COLOR]  •  $ADDON[script.easytv 32221]  [COLOR FF50e0c7]$INFO[Container(655).ListItem.Episode][/COLOR]  •  $ADDON[script.easytv 32222]  [COLOR FF50e0c7]$INFO[Container(655).ListItem.Property(percentplayed)][/COLOR]</label>
                </control>
                
                <!-- On Deck / Watched / Skipped counts -->
                <control type="label">
                    <left>0</left>
                    <top>540</top>
                    <width>620</width>
                    <height>30</height>
                    <font>font10</font>
                    <textcolor>FFFFFFFF</textcolor>
                    <label>$ADDON[script.easytv 32223] [COLOR FF50e0c7]$INFO[Container(655).ListItem.Property(numondeck)][/COLOR]  •  $ADDON[script.easytv 32224] [COLOR FF50e0c7]$INFO[Container(655).ListItem.Property(numwatched)][/COLOR]  •  $ADDON[script.easytv 32225] [COLOR FF50e0c7]$INFO[Container(655).ListItem.Property(numskipped)][/COLOR]</label>
                </control>
                
                <!-- Separator line -->
                <control type="image">
                    <left>0</left>
                    <top>585</top>
                    <width>620</width>
                    <height>1</height>
                    <texture>thinline.png</texture>
                </control>
                
                <!-- Plot -->
                <control type="textbox">
                    <left>0</left>
                    <top>605</top>
                    <width>620</width>
                    <height>320</height>
                    <font>font12</font>
                    <textcolor>FFCCCCCC</textcolor>
                    <label>[COLOR FF50e0c7]$ADDON[script.easytv 32226]... [/COLOR]$INFO[Container(655).ListItem.Plot]</label>
                </control>
            </control>
            
            <!-- ==================== RIGHT SIDE: POSTER GRID ==================== -->
            <control type="panel" id="655">
                <left>720</left>
                <top>40</top>
                <width>1160</width>
                <height>1000</height>
                <orientation>vertical</orientation>
                <onleft>655</onleft>
                <onright>655</onright>
                <onup>655</onup>
                <ondown>655</ondown>
                <preloaditems>6</preloaditems>
                <scrolltime tween="sine" easing="out">200</scrolltime>
                
                <!-- Unfocused poster item -->
                <itemlayout width="220" height="360">
                    <!-- Poster image -->
                    <control type="image">
                        <left>15</left>
                        <top>20</top>
                        <width>190</width>
                        <height>285</height>
                        <texture background="true">$INFO[ListItem.Art(thumb)]</texture>
                        <aspectratio aligny="top">stretch</aspectratio>
                    </control>
                    
                    <!-- Multiselect checkmark overlay -->
                    <control type="image">
                        <left>15</left>
                        <top>20</top>
                        <width>190</width>
                        <height>285</height>
                        <texture>IconWatchedNF.png</texture>
                        <visible>ListItem.IsSelected</visible>
                    </control>
                    
                    <!-- Watched indicator -->
                    <control type="image">
                        <left>15</left>
                        <top>20</top>
                        <width>190</width>
                        <height>285</height>
                        <texture>IconWatchedNF.png</texture>
                        <visible>ListItem.Property(watched)</visible>
                    </control>
                </itemlayout>
                
                <!-- Focused poster item -->
                <focusedlayout width="220" height="360">
                    <!-- Border line -->
                    <control type="image">
                        <left>12</left>
                        <top>17</top>
                        <width>196</width>
                        <height>291</height>
                        <texture border="3" colordiffuse="FF50e0c7">OneWhitePixel.png</texture>
                    </control>
                    
                    <!-- Poster image -->
                    <control type="image">
                        <left>15</left>
                        <top>20</top>
                        <width>190</width>
                        <height>285</height>
                        <texture background="true">$INFO[ListItem.Art(thumb)]</texture>
                        <aspectratio aligny="top">stretch</aspectratio>
                    </control>
                    
                    <!-- Multiselect checkmark overlay -->
                    <control type="image">
                        <left>15</left>
                        <top>20</top>
                        <width>190</width>
                        <height>285</height>
                        <texture>IconWatchedFO.png</texture>
                        <visible>ListItem.IsSelected</visible>
                    </control>
                    
                    <!-- Watched indicator -->
                    <control type="image">
                        <left>15</left>
                        <top>20</top>
                        <width>190</width>
                        <height>285</height>
                        <texture>IconWatchedFO.png</texture>
                        <visible>ListItem.Property(watched)</visible>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>