<?xml version="1.0" encoding="UTF-8"?>
<settings version="1">
	<section id="script.easytv">
		<!-- ============================================================== -->
		<!-- Category 1: EasyTV (main) - The fundamental choice             -->
		<!-- ============================================================== -->
		<category id="main" label="32540" help="32574">
			<group id="launch" label="32551">
				<setting id="primary_function" type="integer" label="32500" help="32400">
					<level>0</level>
					<default>2</default>
					<constraints>
						<options>
							<option label="32501">0</option>
							<option label="32502">1</option>
							<option label="32503">2</option>
						</options>
					</constraints>
					<control type="spinner" format="string" />
				</setting>
			</group>
		</category>

		<!-- ============================================================== -->
		<!-- Category 2: Shows - Which shows does EasyTV use                -->
		<!-- ============================================================== -->
		<category id="shows" label="32541" help="32546">
			<!-- Group 2.1: Show Filter -->
			<group id="filter" label="32552">
				<setting id="filter_enabled" type="boolean" label="32504" help="32401">
					<level>0</level>
					<default>false</default>
					<control type="toggle" />
				</setting>

				<setting id="populate_by" type="integer" label="32505" help="32402">
					<level>0</level>
					<default>0</default>
					<dependencies>
						<dependency type="visible" setting="filter_enabled">true</dependency>
					</dependencies>
					<constraints>
						<options>
							<option label="32506">0</option>
							<option label="32507">1</option>
						</options>
					</constraints>
					<control type="spinner" format="string" />
				</setting>

				<setting id="select_shows" type="action" label="32508" help="32403">
					<level>0</level>
					<dependencies>
						<dependency type="visible" setting="filter_enabled">true</dependency>
						<dependency type="visible" setting="populate_by" operator="is">0</dependency>
					</dependencies>
					<data>RunScript(script.easytv,selector,usersel)</data>
					<control type="button" format="action">
						<close>true</close>
					</control>
				</setting>

				<setting id="selection_display" type="string" label="32568" help="">
					<level>0</level>
					<default>No shows selected</default>
					<dependencies>
						<dependency type="visible" setting="filter_enabled">true</dependency>
						<dependency type="visible" setting="populate_by" operator="is">0</dependency>
					</dependencies>
					<enable>false</enable>
					<control type="edit" format="string" />
				</setting>

				<setting id="playlist_source" type="integer" label="32509" help="32404">
					<level>1</level>
					<default>0</default>
					<dependencies>
						<dependency type="visible" setting="filter_enabled">true</dependency>
						<dependency type="visible" setting="populate_by" operator="is">1</dependency>
					</dependencies>
					<constraints>
						<options>
							<option label="32510">0</option>
							<option label="32511">1</option>
						</options>
					</constraints>
					<control type="spinner" format="string" />
				</setting>

				<setting id="playlist_file" type="action" label="32512" help="32405">
					<level>1</level>
					<dependencies>
						<dependency type="visible" setting="filter_enabled">true</dependency>
						<dependency type="visible" setting="populate_by" operator="is">1</dependency>
						<dependency type="visible" setting="playlist_source" operator="is">1</dependency>
					</dependencies>
					<data>RunScript(script.easytv,playlist,tvshows)</data>
					<control type="button" format="action">
						<close>true</close>
					</control>
				</setting>

				<setting id="playlist_file_display" type="string" label="32568" help="">
					<level>1</level>
					<default>No playlist selected</default>
					<dependencies>
						<dependency type="visible" setting="filter_enabled">true</dependency>
						<dependency type="visible" setting="populate_by" operator="is">1</dependency>
						<dependency type="visible" setting="playlist_source" operator="is">1</dependency>
					</dependencies>
					<enable>false</enable>
					<control type="edit" format="string" />
				</setting>

				<setting id="premieres" type="boolean" label="32514" help="32407">
					<level>1</level>
					<default>false</default>
					<control type="toggle" />
				</setting>

				<setting id="season_premieres" type="boolean" label="32610" help="32611">
					<level>1</level>
					<default>true</default>
					<control type="toggle" />
				</setting>
			</group>

			<!-- Group 2.2: Watch Order (shuffle-friendly shows) -->
			<group id="watch_order" label="32591" help="32597">
				<setting id="select_random_order_shows" type="action" label="32513" help="32406">
					<level>0</level>
					<data>RunScript(script.easytv,selector,random_order_shows)</data>
					<control type="button" format="action">
						<close>true</close>
					</control>
				</setting>

				<setting id="random_order_shows_display" type="string" label="32568" help="">
					<level>0</level>
					<default>No shows selected</default>
					<enable>false</enable>
					<control type="edit" format="string" />
				</setting>
			</group>
		</category>

		<!-- ============================================================== -->
		<!-- Category 3: Browse Mode - Settings for browse mode              -->
		<!-- ============================================================== -->
		<category id="episodelist" label="32590" help="32547">
			<!-- Group 3.1: Appearance -->
			<group id="appearance" label="32555">
				<setting id="view_style" type="integer" label="32515" help="32408">
					<level>0</level>
					<default>0</default>
					<constraints>
						<options>
							<option label="32073">0</option>
							<option label="32074">1</option>
							<option label="32075">2</option>
						</options>
					</constraints>
					<control type="spinner" format="string" />
				</setting>

				<setting id="skin_return" type="boolean" label="32076" help="32409">
					<level>1</level>
					<default>true</default>
					<control type="toggle" />
				</setting>

				<setting id="excl_random_order_shows" type="boolean" label="32518" help="32412">
					<level>1</level>
					<default>false</default>
					<control type="toggle" />
				</setting>
			</group>

			<!-- Group 3.2: Sorting -->
			<group id="sorting" label="32556">
				<setting id="sort_by" type="integer" label="32516" help="32410">
					<level>0</level>
					<default>1</default>
					<constraints>
						<options>
							<option label="32064">0</option>
							<option label="32065">1</option>
							<option label="32066">2</option>
							<option label="32067">3</option>
							<option label="32068">4</option>
						</options>
					</constraints>
					<control type="spinner" format="string" />
				</setting>

				<setting id="sort_reverse" type="boolean" label="32517" help="32411">
					<level>1</level>
					<default>false</default>
					<control type="toggle" />
				</setting>
			</group>

			<!-- Group 3.3: Performance -->
			<group id="performance" label="32557">
				<setting id="limit_shows" type="boolean" label="32519" help="32413">
					<level>1</level>
					<default>false</default>
					<control type="toggle" />
				</setting>

				<setting id="window_length" type="integer" label="32520" help="32414">
					<level>1</level>
					<default>10</default>
					<dependencies>
						<dependency type="enable" setting="limit_shows">true</dependency>
					</dependencies>
					<constraints>
						<minimum>1</minimum>
						<maximum>30</maximum>
						<step>1</step>
					</constraints>
					<control type="slider" format="integer" />
				</setting>
			</group>
		</category>

		<!-- ============================================================== -->
		<!-- Category 4: Random Playlist - Settings for playlist mode       -->
		<!-- ============================================================== -->
		<category id="playlist" label="32543" help="32548">
			<!-- Group 4.1: Basics -->
			<group id="basics" label="32593">
				<setting id="playlist_content" type="integer" label="32579" help="32435">
					<level>0</level>
					<default>1</default>
					<constraints>
						<options>
							<option label="32580">0</option>
							<option label="32581">1</option>
							<option label="32582">2</option>
						</options>
					</constraints>
					<control type="spinner" format="string" />
				</setting>

				<setting id="length" type="integer" label="32521" help="32415">
					<level>0</level>
					<default>5</default>
					<constraints>
						<minimum>1</minimum>
						<maximum>50</maximum>
						<step>1</step>
					</constraints>
					<control type="slider" format="integer" />
				</setting>

				<setting id="multiple_shows" type="boolean" label="32032" help="32416">
					<level>1</level>
					<default>false</default>
					<dependencies>
						<dependency type="visible" operator="!is" setting="playlist_content">2</dependency>
					</dependencies>
					<control type="toggle" />
				</setting>
			</group>

			<!-- Group 4.2: Content Options (TV and Movie settings) -->
			<group id="content_options" label="32583">
				<setting id="episode_selection" type="integer" label="32596" help="32436">
					<level>0</level>
					<default>0</default>
					<dependencies>
						<dependency type="visible" operator="!is" setting="playlist_content">2</dependency>
					</dependencies>
					<constraints>
						<options>
							<option label="32584">0</option>
							<option label="32585">1</option>
							<option label="32586">2</option>
						</options>
					</constraints>
					<control type="spinner" format="string" />
				</setting>

				<setting id="unwatched_ratio" type="integer" label="32608" help="32609">
					<level>1</level>
					<default>50</default>
					<dependencies>
						<dependency type="visible" operator="is" setting="episode_selection">2</dependency>
						<dependency type="visible" operator="!is" setting="playlist_content">2</dependency>
					</dependencies>
					<constraints>
						<minimum>0</minimum>
						<step>5</step>
						<maximum>100</maximum>
					</constraints>
					<control type="slider" format="percentage" />
				</setting>

				<setting id="start_partials_tv" type="boolean" label="32621" help="32622">
					<level>1</level>
					<default>true</default>
					<dependencies>
						<dependency type="visible" operator="!is" setting="playlist_content">2</dependency>
					</dependencies>
					<control type="toggle" />
				</setting>

				<setting id="resume_partials_tv" type="boolean" label="32623" help="32624">
					<level>1</level>
					<default>true</default>
					<dependencies>
						<dependency type="visible" operator="!is" setting="playlist_content">2</dependency>
					</dependencies>
					<control type="toggle" />
				</setting>

				<setting id="start_partials_movies" type="boolean" label="32625" help="32626">
					<level>1</level>
					<default>true</default>
					<dependencies>
						<dependency type="visible" operator="!is" setting="playlist_content">0</dependency>
					</dependencies>
					<control type="toggle" />
				</setting>

				<setting id="resume_partials_movies" type="boolean" label="32627" help="32628">
					<level>1</level>
					<default>true</default>
					<dependencies>
						<dependency type="visible" operator="!is" setting="playlist_content">0</dependency>
					</dependencies>
					<control type="toggle" />
				</setting>

				<setting id="movie_selection" type="integer" label="32037" help="32420">
					<level>0</level>
					<default>0</default>
					<dependencies>
						<dependency type="visible" operator="!is" setting="playlist_content">0</dependency>
					</dependencies>
					<constraints>
						<options>
							<option label="32584">0</option>
							<option label="32585">1</option>
							<option label="32586">2</option>
						</options>
					</constraints>
					<control type="spinner" format="string" />
				</setting>

				<setting id="movies_random_start" type="boolean" label="32524" help="32421">
					<level>1</level>
					<default>false</default>
					<dependencies>
						<dependency type="visible" operator="!is" setting="playlist_content">0</dependency>
						<dependency type="enable" operator="!is" setting="movie_selection">0</dependency>
					</dependencies>
					<control type="toggle" />
				</setting>

				<setting id="movie_playlist_file" type="action" label="32602" help="32604">
					<level>1</level>
					<dependencies>
						<dependency type="visible" operator="!is" setting="playlist_content">0</dependency>
					</dependencies>
					<data>RunScript(script.easytv,playlist,movies)</data>
					<control type="button" format="action">
						<close>true</close>
					</control>
				</setting>

				<setting id="movie_playlist_file_display" type="string" label="32568" help="">
					<level>1</level>
					<default>All movies</default>
					<dependencies>
						<dependency type="visible" operator="!is" setting="playlist_content">0</dependency>
					</dependencies>
					<enable>false</enable>
					<control type="edit" format="string" />
				</setting>

				<setting id="movieweight" type="number" label="32525" help="32422">
					<level>2</level>
					<default>1.0</default>
					<dependencies>
						<dependency type="visible" setting="playlist_content">1</dependency>
					</dependencies>
					<constraints>
						<minimum>0</minimum>
						<maximum>1</maximum>
						<step>0.1</step>
					</constraints>
					<control type="slider" format="number" />
				</setting>
			</group>

			<!-- Group 4.3: Notifications -->
			<group id="notifications" label="32561">
				<setting id="notify" type="boolean" label="32527" help="32424">
					<level>1</level>
					<default>true</default>
					<control type="toggle" />
				</setting>
			</group>

			<!-- Group 4.4: Playlist Continuation -->
			<group id="continuation" label="32612">
				<setting id="playlist_continuation" type="boolean" label="32613" help="32614">
					<level>1</level>
					<default>false</default>
					<control type="toggle" />
				</setting>

				<setting id="playlist_continuation_duration" type="integer" label="32615" help="32616">
					<level>1</level>
					<default>20</default>
					<dependencies>
						<dependency type="enable" setting="playlist_continuation">true</dependency>
					</dependencies>
					<constraints>
						<minimum>0</minimum>
						<maximum>60</maximum>
						<step>5</step>
					</constraints>
					<control type="slider" format="integer" />
				</setting>
			</group>
		</category>

		<!-- ============================================================== -->
		<!-- Category 5: Playback - What happens during/after watching      -->
		<!-- ============================================================== -->
		<category id="playback" label="32544" help="32549">
			<!-- Group 5.1: Next Episode Prompt -->
			<group id="nextprompt" label="32562">
				<setting id="nextprompt" type="boolean" label="32528" help="32425">
					<level>0</level>
					<default>true</default>
					<control type="toggle" />
				</setting>

				<setting id="promptduration" type="integer" label="32529" help="32426">
					<level>1</level>
					<default>20</default>
					<dependencies>
						<dependency type="enable" setting="nextprompt">true</dependency>
					</dependencies>
					<constraints>
						<minimum>0</minimum>
						<maximum>60</maximum>
						<step>5</step>
					</constraints>
					<control type="slider" format="integer" />
				</setting>

				<setting id="promptdefaultaction" type="integer" label="32530" help="32427">
					<level>1</level>
					<default>0</default>
					<dependencies>
						<dependency type="enable" setting="nextprompt">true</dependency>
					</dependencies>
					<constraints>
						<options>
							<option label="32531">0</option>
							<option label="32532">1</option>
						</options>
					</constraints>
					<control type="spinner" format="string" />
				</setting>

				<setting id="nextprompt_in_playlist" type="boolean" label="32533" help="32428">
					<level>2</level>
					<default>false</default>
					<dependencies>
						<dependency type="enable" setting="nextprompt">true</dependency>
					</dependencies>
					<control type="toggle" />
				</setting>
			</group>

			<!-- Group 5.2: Warnings -->
			<group id="warnings" label="32563">
				<setting id="previous_episode_check" type="boolean" label="32534" help="32429">
					<level>1</level>
					<default>false</default>
					<control type="toggle" />
				</setting>
			</group>
		</category>

		<!-- ============================================================== -->
		<!-- Category 6: Advanced - Technical settings and tools            -->
		<!-- ============================================================== -->
		<category id="advanced" label="32545" help="32550">
			<!-- Group 6.1: Background Service -->
			<group id="service" label="32564">
				<setting id="startup" type="boolean" label="32535" help="32430">
					<level>1</level>
					<default>true</default>
					<control type="toggle" />
				</setting>

				<setting id="maintainsmartplaylist" type="boolean" label="32536" help="32431">
					<level>2</level>
					<default>false</default>
					<control type="toggle" />
				</setting>
			</group>

			<!-- Group 6.2: Debugging -->
			<group id="debugging" label="32565">
				<setting id="logging" type="boolean" label="32537" help="32432">
					<level>2</level>
					<default>false</default>
					<control type="toggle" />
				</setting>
			</group>

			<!-- Group 6.3: Tools -->
			<group id="tools" label="32566">
				<setting id="clone" type="action" label="32538" help="32433">
					<level>2</level>
					<data>RunScript(script.easytv,clone)</data>
					<control type="button" format="action" />
				</setting>

				<setting id="exporter" type="action" label="32539" help="32434">
					<level>2</level>
					<data>RunScript(script.easytv,exporter)</data>
					<control type="button" format="action" />
				</setting>
			</group>
		</category>

		<!-- ============================================================== -->
		<!-- Hidden Settings - Internal use only, never shown in UI         -->
		<!-- ============================================================== -->
		<category id="hidden">
			<group id="internal">
				<setting id="user_playlist_path" type="string" visible="false">
					<level>4</level>
					<default>none</default>
					<control type="edit" format="string" />
				</setting>

				<setting id="movie_user_playlist_path" type="string" visible="false">
					<level>4</level>
					<default>none</default>
					<control type="edit" format="string" />
				</setting>

				<setting id="random_order_shows" type="string" visible="false">
					<level>4</level>
					<default>none</default>
					<control type="edit" format="string" />
				</setting>

				<setting id="selection" type="string" visible="false">
					<level>4</level>
					<default>none</default>
					<control type="edit" format="string" />
				</setting>
			</group>
		</category>
	</section>
</settings>
